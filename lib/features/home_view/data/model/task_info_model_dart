// To parse this JSON data, do
//
//     final taskInfoModel = taskInfoModelFromJson(jsonString);

import 'dart:convert';

List<TaskInfoModel> taskInfoModelFromJson(String str) => List<TaskInfoModel>.from(json.decode(str).map((x) => TaskInfoModel.fromJson(x)));

String taskInfoModelToJson(List<TaskInfoModel> data) => json.encode(List<dynamic>.from(data.map((x) => x.toJson())));

class TaskInfoModel {
    final DateTime? dueDate;
    final String? title;
    final String? category;
    final String? userId;
    final bool? isDone;
    final String? idTask;

    TaskInfoModel({
        this.dueDate,
        this.title,
        this.category,
        this.userId,
        this.isDone,
        this.idTask,
    });

    factory TaskInfoModel.fromJson(Map<String, dynamic> json) => TaskInfoModel(
        dueDate: json["dueDate"] == null ? null : DateTime.parse(json["dueDate"]),
        title: json["title"] == null ? null : json["title"],
        category: json["category"] == null ? null : json["category"],
        userId: json["userId"] == null ? null : json["userId"],
        isDone: json["isDone"] == null ? null : json["isDone"],
        idTask: json["idTask"] == null ? null : json["idTask"],
    );

    Map<String, dynamic> toJson() => {
        "dueDate": "${dueDate!.year.toString().padLeft(4, '0')}-${dueDate!.month.toString().padLeft(2, '0')}-${dueDate!.day.toString().padLeft(2, '0')}",
        "title": title == null ? null : title,
        "category": category == null ? null : category,
        "userId": userId == null ? null : userId, 
        "isDone": isDone == null ? null : isDone,
        "idTask": idTask == null ? null : idTask,
    };
}
